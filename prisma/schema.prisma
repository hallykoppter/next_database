generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id                        Int @id @default(autoincrement())
  name                      String
  username                  String @unique
  password                  String
}

model Settings {
  id                        Int @id @default(autoincrement())
  npsn                      String
  nama_sekolah              String
  email_sekolah             String
  alamat_sekolah            String
  semester                  String
  nama_kepsek               String
  nip_kepsek                String
  logo_sekolah              String
  aktif_pengumuman          Int
  waktu_pengumuman          String
  izin_login                Int
}
